# Create the user and home directory, set permissions
# RUN adduser -D myuser && \
#     mkdir -p /home/myuser && \
#     chown myuser:myuser /home/myuser

# USER myuser
# WORKDIR /app

WORKDIR /app

COPY requirments.txt .

RUN pip install --no-cache-dir -r requirments.txt


FROM python:3.9.25-alpine3.22 AS production

# Create the user and home directory, set permissions
RUN adduser -D myuser && \
    mkdir -p /home/myuser && \
    chown myuser:myuser /home/myuser

USER myuser

WORKDIR /app
COPY --from=stage /app /app
COPY . .

EXPOSE 5000
CMD [ "python", "flask-app.py" ]
# Estimated size for this image is 123MB


